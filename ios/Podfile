# ios/Podfile

require 'json'

# Helper to resolve scripts using Node (works with hoisting/pnpm/etc.)
def node_require(script)
  require Pod::Executable.execute_command('node', ['-p',
    "require.resolve(
      '#{script}',
      {paths: [process.argv[1]]},
    )", __dir__]).strip
end

# React Native core pods
node_require('react-native/scripts/react_native_pods.rb')

# React Native Permissions setup
node_require('react-native-permissions/scripts/setup.rb')

platform :ios, min_ios_version_supported
prepare_react_native_project!

# ✅ Enable all permissions you’re likely to need for KIS
# (You can always remove some later if you’re sure you don’t need them.)
setup_permissions([
  'Camera',
  'Microphone',
  'PhotoLibrary',
  'PhotoLibraryAddOnly',
  'LocationWhenInUse',
  'LocationAlways',        # uncomment if you really need background location
  'Contacts',
  'Calendars',
  'Reminders',
  'Motion',
  'MediaLibrary',
  'Bluetooth',
  'SpeechRecognition',
  'Siri',
  'FaceID',
  'Notifications',
  'BackgroundRefresh',
])

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'KIS' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # ❌ REMOVE your old custom react-native-permissions block.
  # (The add_rn_permission / permissions_pkg_json block is no longer needed.)

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
  end
end
